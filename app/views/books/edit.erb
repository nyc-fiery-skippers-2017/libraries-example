<%= erb :'_errors'%>


<form class="" action="/books/<%= @book.id%>" method="post">
  <input type="hidden" name="_method" value="put">
  <div class="">
    <label for="title">Title</label>
    <input type="text" name="book[title]" value="<%= @book.title%>" id="title"
    required>
  </div>
  <div class="">
    <label for="author">Author</label>
    <input type="text" name="book[author]" value="<%= @book.author%>" id="author"
    required>
  </div>

  <input type="submit" name="" value="Update">
</form>
</div>
